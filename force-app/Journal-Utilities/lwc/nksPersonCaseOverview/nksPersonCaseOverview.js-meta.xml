<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Person Case Overview</masterLabel>
    <description>Displaying a list of a persons cases with NAV</description>
    <targets>
      <target>lightning__RecordPage</target>
      <target>lightning__FlowScreen</target>
  </targets>
  <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
                <property
                name="actorId"
                type="String"
                label="Actor ID:"
                role="inputOnly"
            />
                <property
                name="prefilledThemeGroup"
                type="String"
                label="Preselected theme group:"
                role="inputOnly"
            />
                <property
                name="selectedCaseId"
                type="String"
                label="NAV Case ID"
                role="outputOnly"
            />
                <property
                name="selectedCaseTheme"
                type="String"
                label="NAV Case Theme"
                role="outputOnly"
            />
                <property
                name="navCaseType"
                type="String"
                label="NAV Case Type"
                role="outputOnly"
            />
                <property
                name="selectedSubtheme"
                type="String"
                label="Selected subtheme"
                role="outputOnly"
            />
                <property
                name="selectedSubthemeSfId"
                type="String"
                label="Selected subtheme SF ID"
                role="outputOnly"
            />
                <property
                name="selectedCaseThemeSfId"
                type="String"
                label="Selected Theme SF ID"
                role="outputOnly"
            />
                <property
                name="selectedThemeGroupSfId"
                type="String"
                label="Selected Theme Group SF ID"
                role="outputOnly"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
