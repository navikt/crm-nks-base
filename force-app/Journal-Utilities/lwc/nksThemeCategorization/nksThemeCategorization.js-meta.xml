<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Theme categorization</masterLabel>
    <description
    >Component for efficient categorization by theme group, theme and subtheme</description>
    <targets>
      <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
                <property
                name="themeGroup"
                type="String"
                label="Theme Group: (Salesforce ID)"
            />
                <property
                name="theme"
                type="String"
                label="Theme: (Salesforce ID)"
            />
                <property
                name="subtheme"
                type="String"
                label="Subtheme: (Salesforce ID)"
            />

                <property
                name="themeGroupCode"
                type="String"
                label="Output theme group code from kodeverk"
                role="outputOnly"
            />
                <property
                name="themeCode"
                type="String"
                label="Output theme code from kodeverk"
                role="outputOnly"
            />
                <property
                name="subthemeCode"
                type="String"
                label="Output subtheme code from kodeverk"
                role="outputOnly"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
