<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Home Page Text Component</masterLabel>
    <targets>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property name="cardTitle" label="Title" type="String" default="Title" />
            <property name="iconName" label="Icon name"
                description="On the format category:iconName. See available icons: https://lightningdesignsystem.com/icons/"
                type="String" default="Title" />
            <property name="type" label="Type of announcement" type="String" required="true" />
            <property name="listViewName" label="List View" type="String" required="true"
                default="Recent" />
            <property name="enableRefresh" label="Show refresh button" type="Boolean"
                default="false" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>