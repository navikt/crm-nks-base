<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NKS NAV Task Type Selection</masterLabel>
    <description>Will take input and return valid task types based on selected theme</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="theme" label="Input: Theme Code" type="String" role="inputOnly" />
            <property
                name="showcomponent"
                label="Input: Show component"
                type="Boolean"
                role="inputOnly"
            />
            <property name="selectedTaskType" label="Selected Task Type" type="String" />
            <property name="selectedTaskTypeId" label="Selected Task Type" type="String" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
