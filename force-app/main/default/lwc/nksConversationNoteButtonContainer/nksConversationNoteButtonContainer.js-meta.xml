<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NKS Conversation Note Button Container</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId" label="recordId" type="String" role="inputOnly" />
            <property name="conversationNoteButtonLabel" label="Conversation note button label"
                type="String" role="inputOnly" />
            <property name="journalAndShare" label="Journal and share conversation note"
                type="Boolean" role="inputOnly" default="false" />
            <property name="journalConversation" label="Journal conversation"
                type="Boolean" role="outputOnly" />
            <property name="showBackButton" label="Show back button"
                type="Boolean" role="inputOnly" default="false" />
            <property name="navTask" label="navTask" type="@salesforce/schema/NavTask__c"
                role="outputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>