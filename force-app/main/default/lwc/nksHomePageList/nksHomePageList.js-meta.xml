<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Home Page List</masterLabel>
    <description>Component to display list of records</description>
    <targets>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property name="cardLabel" label="Card title" type="String" default="Title" />
            <property name="iconName" label="Icon name" description="On the format category:iconName. See available icons: https://lightningdesignsystem.com/icons/" type="String" default="custom:custom1" />
            <property name="title" label="API name of title field" type="String" required="true" default="Name" />
            <property name="content" label="API name of content" type="String" required="false" default="Name" />
            <property name="objectName" label="Object API Name" description="Object to get data from" required="true" type="String" />
            <property name="filter" label="SOQL filter" type="String" required="true" default="Name = 'Navn'" />
            <property name="orderby" label="SOQL orderby" type="String" required="false" default="" />
            <property name="limit" label="SOQL number of records" type="String" required="false" />
            <property name="listviewname" label="Name of list view to redirect" default="Recent" type="String" required="false" />
            <property name="linklabel" label="Link label to redirect to list view" default="Vis alle" type="String" required="false" />
            <property name="showimage" label="show latest related image?" type="Boolean" required="false" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>