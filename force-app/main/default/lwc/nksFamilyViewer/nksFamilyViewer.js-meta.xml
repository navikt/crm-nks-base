<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <description>Queries and visualizes relationships between persons in runtime from PDL</description>
    <isExposed>true</isExposed>
    <masterLabel>Family Viewer(PDL)</masterLabel>
    <targets>
        <target>
            lightning__RecordPage
        </target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property
                name="useNewDesign"
                type="Boolean"
                default="false"
                label="Use new design"
                description="Check to use new design"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>