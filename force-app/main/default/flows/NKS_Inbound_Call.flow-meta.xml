    <decisions>
        <name>Check_Identifier</name>
        <label>Check Identifier</label>
        <locationX>314</locationX>
        <locationY>158</locationY>
        <defaultConnector>
            <targetReference>Create_Case</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Phone Number</defaultConnectorLabel>
        <rules>
            <name>Person_Identifier</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>INPUT_TYPE</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>PERSON_IDENT</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Person_Account</targetReference>
            </connector>
            <label>Person Identifier</label>
        </rules>
        <rules>
            <name>Organization_Identifier</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>INPUT_TYPE</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>ORG_IDENT</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Organization_Account</targetReference>
            </connector>
            <label>Organization Identifier</label>
        </rules>
    </decisions>
    <formulas>
        <description>Formula to determine the type of input from the IVR. Either, PHONE_NUMBER, PERSON_IDENT or ORG_IDENT.</description>
        <name>INPUT_TYPE</name>
        <dataType>String</dataType>
        <expression>CASE(LEN({!sfdc_case_id}),
11, &apos;PERSON_IDENT&apos;,
9, &apos;ORG_IDENT&apos;,
&apos;PHONE_NUMBER&apos;
)</expression>
    </formulas>
